###############################
# Core EditorConfig Options   #
###############################

root = true
# All files
[*]
indent_style = space
charset = utf-8
insert_final_newline = false
trim_trailing_whitespace = true
rulers = 120

[*.json]
indent_size = 2

[*.yaml]
indent_size = 2

[*.svelte]
indent_size = 4

[*.ts]
indent_size = 4